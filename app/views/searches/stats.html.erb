<div id="stats-container-outline">
    <div class="stats-container container">

    <div id="stats-header-container">
        <i id="fan" class="fas fa-fan fa-3x"></i>
        <h1>Stats:</h1>
    </div>

    <ul class="list-group">
                <div class="list-group-item"><strong>Average Review Score:</strong>
                <%= @average_review %>
                </div>

                <div class="list-group-item">
                        <strong>
                            Most prolific reviewer:
                        </strong>
                        <%= link_to @most_reviews.username, user_path(@most_reviews) %>
                </div>

                <div class="list-group-item">
                <strong>Longest Review:</strong>
                <%= Review.longest_review.content %> <strong> by </strong><%= link_to @longest_review.reviewer.username, user_path(@longest_review.reviewer) %>
                </div>
                
                <div class="list-group-item">
                    <strong>Total Reviews:</strong>
                <%= @total_reviews %>
                </div>
                
                
                <div class="list-group-item">
                    <strong>
                        Total Number of Breweries added to BrewQueues:
                    </strong>
                    <%= @total_breweries_on_brewqueue %>
                </div>
                

                <div class="list-group-item"><strong>User with most Breweries on BrewQueue (alcoholic):</strong>
                    <%= link_to @alcoholic.username, user_path(@alcoholic) %>
                </div>
                
                <div class="list-group-item"><strong>
                    Brewery with best average review:</strong>
                    <%=link_to @best_brewery.name, brewery_path(@best_brewery) %> with an average score of <strong><%= @best_brewery.average_rating %></strong>
                </div>
        
                <div class="list-group-item">
                    <strong>
                        Brewery added to most BrewQueues: 
                    </strong>
                    <%= link_to @most_bq_brewery.name, brewery_path(@most_bq_brewery) %>
                </div>
        
                <div class="list-group-item">
                    <strong>
                        City with the most Breweries:
                    </strong>
                    <%= link_to @city, "/?search=#{@city}" %>
                </div>
            
                <div class="list-group-item">
                        <strong>
                            State with the most Breweries:
                        </strong>
                        <%= link_to @state, "/?search_state=#{@state}" %>
                    </div>
            
                <div class="list-group-item"><strong>
                    Brewery with most Reviews:
                </strong><%= link_to @most_reviews_brewery.name, brewery_path(@most_reviews_brewery) %></div>
    </ul>

<!--fast-->

    </div>
</div>